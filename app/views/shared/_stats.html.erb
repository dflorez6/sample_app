<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>                 <!-- the following count is calculated through the method followed_users.count -->
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">          <!-- the followers count is calculated through the method followers.count -->
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>