<% if @feed_items.any? %>
    <ol class="microposts">
      <%= render partial: 'shared/feed_item', collection: @feed_items %>         <!-- The status feed partial defers the feed item rendering to a feed item partial. Here we pass a :collection parameter with the feed items, which causes render to use the given partial (’feed_item’ in this case) to render each item in the collection.  -->
    </ol>
    <%= will_paginate @feed_items %>
<% end %>